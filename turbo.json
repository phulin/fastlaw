{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"deploy": {
			"dependsOn": ["build"],
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"lint": {},
		"check": {},
		"format": {
			"cache": false
		}
	}
}

{
	"name": "fastlaw",
	"private": true,
	"version": "0.2.0",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"deploy": "turbo deploy",
		"typecheck": "turbo typecheck",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write . && cd packages/ingest/container-rust && cargo fmt",
		"migrate:local": "wrangler d1 migrations apply --config packages/web/wrangler.toml fastlaw --local",
		"migrate:remote": "wrangler d1 migrations apply --config packages/web/wrangler.toml fastlaw --remote"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@cloudflare/workers-types": "^4.20260212.0",
		"@types/node": "^22.13.5",
		"turbo": "^2.4.2",
		"typescript": "^5.7.3",
		"wrangler": "^4.65.0"
	},
	"packageManager": "yarn@4.12.0",
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"@types/pdfjs-dist": "^2.10.378"
	}
}

{
	"name": "authority",
	"private": true,
	"version": "0.2.0",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"deploy": "turbo deploy",
		"typecheck": "turbo typecheck",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"migrate:local": "wrangler d1 migrations apply fastlaw --local",
		"migrate:remote": "wrangler d1 migrations apply fastlaw --remote"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@cloudflare/workers-types": "^4.20250129.0",
		"@types/node": "^22.13.5",
		"turbo": "^2.4.2",
		"typescript": "^5.7.3",
		"wrangler": "^4.61.1"
	},
	"packageManager": "yarn@4.12.0",
	"engines": {
		"node": ">=22"
	}
}
